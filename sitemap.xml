---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    {% if post.translation %}
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}{{ post.url }}" />
    <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}{{ post.translation }}" />
    {% endif %}
  </url>
  {% endfor %}
  
  {% for page in site.pages %}
    {% unless page.url contains '/es/' or page.url contains '.xml' or page.url contains '.txt' %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>{% if page.url == '/' %}1.0{% else %}0.7{% endif %}</priority>
    {% if page.url == '/' %}
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/" />
    <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}/es/" />
    {% elsif page.url == '/about/' %}
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/about/" />
    <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}/es/about/" />
    {% elsif page.url == '/blog/' %}
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/blog/" />
    <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}/es/blog/" />
    {% endif %}
  </url>
    {% endunless %}
  {% endfor %}
  
  {% for page in site.pages %}
    {% if page.url contains '/es/' %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>{% if page.url == '/es/' %}1.0{% else %}0.7{% endif %}</priority>
    {% if page.url == '/es/' %}
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/" />
    <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}/es/" />
    {% elsif page.url == '/es/about/' %}
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/about/" />
    <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}/es/about/" />
    {% elsif page.url == '/es/blog/' %}
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/blog/" />
    <xhtml:link rel="alternate" hreflang="es" href="{{ site.url }}/es/blog/" />
    {% endif %}
  </url>
    {% endif %}
  {% endfor %}
</urlset>
